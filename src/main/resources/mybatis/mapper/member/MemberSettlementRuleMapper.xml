    <insert id="saveBatch" keyColumn="id" useGeneratedKeys="true"  keyProperty="id">
        INSERT INTO `tb_member_settlement_rule` (`id`,`tenant_id`,`package_id`,`rule`,`price`,`ratio`,`order_type`,`is_share_benefit`,`account_type`,`account`,`create_time`,`create_user`,`update_user`,`update_time`,`is_deleted`,`share_ratio`,`cashier_type`,`extra_price`)
