        <foreach collection="list" item="item" separator=",">
                (#{item.id},#{item.tenantId},#{item.packageId},#{item.rule},#{item.price},#{item.ratio},#{item.orderType},#{item.isShareBenefit},#{item.accountType},#{item.account},#{item.createTime},#{item.createUser},#{item.updateUser},#{item.updateTime},#{item.isDeleted},#{item.shareRatio},#{item.cashierType},#{item.extraPrice})
