        where `id`=#{id}
    </delete>

    <!--根据id查询对象-->
    <select id="getMemberSettlementRuleDOById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM `tb_member_settlement_rule`
        WHERE `id`=#{id}
