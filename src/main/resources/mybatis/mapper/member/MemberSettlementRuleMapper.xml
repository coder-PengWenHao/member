    <update id="updateById">
        update `tb_member_settlement_rule` set
        tenant_id=#{tenantId},package_id=#{packageId},rule=#{rule},price=#{price},ratio=#{ratio},order_type=#{orderType},is_share_benefit=#{isShareBenefit},account_type=#{accountType},account=#{account},create_time=#{createTime},create_user=#{createUser},update_user=#{updateUser},update_time=#{updateTime},is_deleted=#{isDeleted},share_ratio=#{shareRatio},cashier_type=#{cashierType},extra_price=#{extraPrice}
